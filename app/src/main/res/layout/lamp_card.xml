<android.support.v7.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/card_toolbar"
            android:layout_width="match_parent"
            android:layout_height="46dp">

            <ProgressBar
                android:id="@+id/progress_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:indeterminate="true"
                android:visibility="gone"/>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/lamp_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/info_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/ip_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ip_address"/>

                <TextView
                    android:id="@+id/inverted_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ip_address_txt"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:text="@string/inverted"/>

                <TextView
                    android:id="@+id/ip_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/ip_address_txt"
                    android:layout_alignBottom="@+id/ip_address_txt"
                    android:layout_toEndOf="@id/inverted_txt"
                    android:layout_toRightOf="@id/inverted_txt"
                    android:text="@string/loading"/>

                <TextView
                    android:id="@+id/inverted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/inverted_txt"
                    android:layout_alignBottom="@+id/inverted_txt"
                    android:layout_toEndOf="@id/inverted_txt"
                    android:layout_toRightOf="@id/inverted_txt"
                    android:text="@string/loading"/>
            </RelativeLayout>

            <Button
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@id/info_panel"
                android:layout_toLeftOf="@+id/collapse"
                android:layout_toStartOf="@+id/collapse"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/delete"/>

            <ImageButton
                android:id="@+id/collapse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/delete"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/delete"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="@string/collapse"
                android:src="@drawable/ic_action_arrow_top"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>